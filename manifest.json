{
  "name": "Baidu Search Appender",
  "description": "向百度搜索尾部追加额外固定参数",
  "version": "0.1",
  "manifest_version": 3,
  "author": "ForteScarlet",
  "background": {
    "service_worker": "background.js"
  },

  "permissions": [
    "storage",
    "webRequest",
    "tabs",
    "webRequestBlocking"
  ],

  "host_permissions": [
    "*://*.baidu.com/s"
  ],

  "content_scripts": [
    {
      "matches": ["*://*.baidu.com/s*"],
      "js": ["content_scripts/search.js"]
    }
  ]

}